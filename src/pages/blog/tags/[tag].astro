---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import Layout from '../../../layouts/DefaultLayout.astro'
import BlogList from '../../../components/blog/BlogList.astro'
import { Button } from '@eliancodes/brutal-ui'

export async function getStaticPaths() {
  const allPosts = await getCollection('blog').then((collection) => collection.reverse())

  const tags: string[] = []

  allPosts.forEach((post) => {
    post.data.tags.forEach((tag) => {
      tags.push(tag.toLowerCase())
    })
  })

  return Array.from(new Set(tags)).map((tag) => {
    return {
      params: { tag },
      props: {
        tag,
        blogposts: allPosts.filter((post) => post.data.tags.map((tag) => tag.toLowerCase()).includes(tag)),
      },
    }
  })
}

interface Props {
  tag: string
  blogposts: CollectionEntry<'blog'>[]
}

const { tag, blogposts } = Astro.props
---

<Layout
  title={`Blog: ${tag}`}
  description={`BlockSpace | All posts tagged with ${tag}`}
  pageTitle={`BlockSpace| Blogposts tagged with ${tag}`}
>
  <main class="bg-purple grid gap-4 p-6">
    <div class="container">
      <div class="mb-10">
        <a href="/blog/">&larr; Back to blog</a>
        <!-- <Button href="/blog/">&larr; Back to blog</Button> -->
      </div>
      <BlogList posts={blogposts} />
    </div>
  </main>
</Layout>
