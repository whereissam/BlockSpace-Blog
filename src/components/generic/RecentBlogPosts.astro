---
import { getCollection } from 'astro:content'
import BlogList from '../blog/BlogList.astro'
import { Card } from '@eliancodes/brutal-ui'
import { Button } from '@eliancodes/brutal-ui'

interface Props {
  count?: number
}

const { count } = Astro.props

const posts = await getCollection('blog').then((posts) => posts.reverse().slice(0, count ?? 3))
---

<section class="mt-8">
  <Card>
    <div id="main-blogPost" class="flex items-start justify-between">
      <h2 class="dm-serif mb-8 text-2xl md:text-4xl lg:text-6xl">最新文章</h2>
      <div class="btn hidden md:block">
        <a class="font-bold" href="/blog/">去文章區 &rarr;</a>
        <!-- <Button href="/blog/">去文章區 &rarr;</Button> -->
      </div>
      <div class="btn block md:hidden">
        <Button href="/blog/">去文章區</Button>
      </div>
    </div>
    <BlogList posts={posts} />
  </Card>
</section>

