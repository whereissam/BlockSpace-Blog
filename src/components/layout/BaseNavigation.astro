---
interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog/" },
];

const socialIcons = [
  {
    name: "GitHub",
    url: "https://github.com/whereissam",
    icon: "i-uil-github",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/bungeegumeee",
    icon: "i-uil-twitter",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/the.blockspace",
    icon: "i-uil-instagram",
  },
  {
    name: "Telegram",
    url: "https://t.me/theblockspaces",
    icon: "i-uil-telegram",
  },
  { name: "RSS", url: "/feed.xml", icon: "i-uil-rss" },
];

const { pageTitle } = Astro.props;
---

<header class="border-b-4 border-black flex justify-between p-6 items-center">
  {pageTitle && <h1 class="hidden">{pageTitle}</h1>}
  <a href="/" title="Back to Home" class="flex flex-row items-center">
    <img
      src="https://raw.githubusercontent.com/whereissam/whereissam.github.io/d9b0348df2a0294b95567f7da605d125473ec586/assets/images/logo-black.svg"
      alt=""
      class="h-20 w-20"
    />
    <p class="righteous md:text-5xl flex justify-center justify-self-center">
      BlockSpace
    </p>
  </a>
  <nav class="hidden md:inline-block">
    <h2 class="hidden">Navigation</h2>
    <ul class="flex gap-8 poppins">
      {
        navigationItems.map((item) => (
          <li>
            <a
              class="text-lg font-medium hover:text-green hover:underline transition-all duration-150 ease-in-out"
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class="hover:text-green hover:underline transition-all duration-150 ease-in-out"
              target="_blank"
              title={`'See @ElianCodes on ${item.name}`}
            >
              <div class:list={[item.icon, "w-6 h-6"]} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class="md:hidden flex">
    <h2 class="hidden">Mobile Navigation</h2>
    <ul>
      <li><a href="/blog/">Blog</a></li>
    </ul>
  </nav>
</header>
